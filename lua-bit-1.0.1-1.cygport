inherit lua

ORIG_PN="LuaBitOp"

DESCRIPTION="Lua bit manipulation library"
HOMEPAGE="http://bitop.luajit.org/"
SRC_URI="http://bitop.luajit.org/download/${ORIG_PN}-${PV}.tar.gz"
PATCH_URI="1.0.1-link-liblua.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake MODSO="bit.dll" LIBS=${LUA_LIBS}
}

src_install() {
	cd ${B}
	dolua bit.dll
}
